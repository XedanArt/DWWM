        <h5 id="footer-title-account" class="footer-custom-top-title">MON COMPTE</h5>
        <ul class="footer-custom-top-list">
          {% if app.user %}
            <li><a href="{{ path('account.profile') }}" class="footer-custom-link" aria-label="Accéder à mon profil">Mon Profil</a></li>
            <li><a href="{{ path('cookies.preferences') }}" class="footer-custom-link" aria-label="Gérer mes préférences de cookies">Gérer les cookies</a></li>

            {% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_SUPER_ADMIN' in app.user.roles %}
              <li><a href="{{ path('dashboard') }}" class="footer-custom-link" aria-label="Accéder au dashboard administrateur">Dashboard</a></li>
            {% endif %}

          {% else %}
            <li><a href="{{ path('app_login') }}" class="footer-custom-link" aria-label="Se connecter à mon compte">Se connecter</a></li>
            <li><a href="{{ path('auth.register') }}" class="footer-custom-link" aria-label="Créer un compte">S'inscrire</a></li>
          {% endif %}
        </ul>
