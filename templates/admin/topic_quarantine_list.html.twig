{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}

{% block title %}Topics en quarantaine{% endblock %}

{% block body %}
<div class="quarantine-new-container dashboard-wrapper">
  <section class="dashboard-section">
    <h2 class="dashboard-title text-warning"> Topics en quarantaine</h2>

    <table class="table table-bordered table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Titre</th>
          <th>Auteur</th>
          <th>Date de création</th>
          <th>Accès</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for topic in topics %}
          <tr>
            <td><strong>{{ topic.title }}</strong></td>
            <td>{{ topic.author.displayUsername }}</td>
            <td>{{ topic.createdAt|date('d/m/Y H:i') }}</td>
            <td>
              <a href="{{ path('topic.show', { id: topic.id }) }}" class="btn btn-sm btn-outline-secondary">
                Voir
              </a>
            </td>
            <td>
              <div class="btn-group" role="group">
                <form method="post" action="{{ path('topic.restore', { id: topic.id }) }}">
                  <button type="submit" class="btn btn-sm btn-primary">Restaurer</button>
                </form>
                <form method="post" action="{{ path('topic.delete', { id: topic.id }) }}" onsubmit="return confirm('Supprimer définitivement ce topic ? Cette action est irréversible.')">
                  <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-center text-muted">Aucun topic en quarantaine pour le moment.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
</div>
{% endblock %}