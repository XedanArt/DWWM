{% extends 'base.html.twig' %}

{% block title %}{{ devblog.title }}{% endblock %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center">
  <div class="devblog-show-container p-4 shadow rounded">
    
    {% if devblog.image %}
      <div class="text-center mb-4">
        <img src="{{ asset('img/' ~ devblog.image) }}" alt="{{ devblog.title }}" class="devblog-show-image rounded">
      </div>
    {% endif %}

    <h1 class="text-center mb-3">{{ devblog.title }}</h1>
    <p class="text-center">Publié le {{ devblog.date|date('d/m/Y') }}</p>

    <hr>

    <div class="devblog-content" style="white-space: pre-line; font-size: 1.1rem;">
      {{ devblog.content }}
    </div>

    <div class="text-center mt-4">
      <a href="{{ path('news.devblog') }}" class="btn btn-secondary">← Retour au devblog</a>
    </div>
  </div>
</div>
{% endblock %}