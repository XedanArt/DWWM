
{% extends "base.html.twig" %}

{% block title %}Devblog de l'équipe{% endblock %}

{% block body %}
<div class="devblog-title-container">
  <h2 class="devblog-title">Devblog de l'équipe : Voici les dernières nouveautés</h2>
</div>

<div class="devblog-carousel">
  <button class="devblog-nav prev" type="button">❮</button>

  {% for devblog in devblogs %}
    <div class="devblog-card">
      {% if devblog.image %}
        <img src="{{ asset('img/' ~ devblog.image) }}" alt="{{ devblog.title }}">
      {% endif %}
      <div class="devblog-description">
        <h3>DEVBLOG du {{ devblog.date|date('d/m/Y') }} : {{ devblog.title }}</h3>
        <p>{{ devblog.content|nl2br }}</p>
      </div>
    </div>
  {% else %}
    <p class="text-muted">Aucun devblog disponible pour le moment.</p>
  {% endfor %}

  <button class="devblog-nav next" type="button">❯</button>
</div>

<div class="carousel-spacer"></div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/devblog.js') }}"></script>
{% endblock %}