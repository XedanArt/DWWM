{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
  <section class="page-forgot">
    <div class="forgot-container">

      <div class="forgot-header">
        <h1 class="h1-auth">Réinitialisation du mot de passe</h1>
      </div>

      <div class="forgot-card">
        {% for message in app.flashes('success') %}
          <div class="flash-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
          <div class="flash-error">{{ message }}</div>
        {% endfor %}

        <form method="post">
          <input type="password" name="newPassword" placeholder="Nouveau mot de passe" class="input-auth" required />
          <input type="password" name="confirmPassword" placeholder="Confirmer le mot de passe" class="input-auth" required />
          <button type="submit" class="btn-forgot">Valider</button>
        </form>
      </div>

    </div>
  </section>
{% endblock %}
