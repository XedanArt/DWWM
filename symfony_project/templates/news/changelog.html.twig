{% extends "base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/changelog.css') }}">
{% endblock %}

{% block title %}Changelog{% endblock %}

{% block body %}
<div class="container changelog-main-container">
  <div class="row">

    <!-- Section principale -->
    <div class="col-lg-8 changelog-patchs-container">

      <!-- Titre principal -->
      <div class="changelog-title mb-4">
        <h1>NOTES DE MISE À JOUR</h1>
      </div>

      <!-- Dernier patch mis en avant -->
      {% if pagination|length > 0 %}
        {% set latest = pagination|first %}
        <div class="changelog-last-patch mb-5" id="entry-{{ latest.date|date('Y-m-d') }}">
          <a href="{{ path('news.changelog.show', {slug: latest.slug}) }}" class="text-decoration-none text-light">
            <div class="changelog-last-title text-center">
              <h2>MÀJ {{ latest.version }} : {{ latest.date|date('d/m/Y') }}</h2>
            </div>
            <div class="changelog-last-image-wrapper">
              {% if latest.image %}
                <img src="{{ asset('img/changelog/' ~ latest.image) }}" alt="Illustration {{ latest.version }}" class="changelog-last-image">
              {% endif %}
              <div class="changelog-last-content">
                <h4>{{ latest.date|date('d F Y') }}</h4>
                <p>{{ latest.content|length > 300 ? latest.content[:300] ~ '...' : latest.content|nl2br }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endif %}

      <!-- Liste des patchs précédents -->
      <div class="changelog-patch-list">
        {% for changelog in pagination|slice(1) %}
          <div class="patch-entry mb-4" id="entry-{{ changelog.date|date('Y-m-d') }}">
            <h5>
              <a href="{{ path('news.changelog.show', {slug: changelog.slug}) }}" class="text-decoration-none text-light">
                MÀJ {{ changelog.version }} - {{ changelog.date|date('d F Y') }}
              </a>
            </h5>
            <p><strong>Changelog :</strong> {{ changelog.content|length > 200 ? changelog.content[:200] ~ '...' : changelog.content|nl2br }}</p>
          </div>
        {% else %}
          <p>Aucun changelog disponible pour le moment.</p>
        {% endfor %}
      </div>

      <!-- Pagination dynamique -->
      <div class="changelog-pagination mt-4">
        {{ knp_pagination_render(pagination) }}
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4 changelog-sidebar-container">
      <div class="changelog-patch-nav">
        <h5>Correctifs</h5>
        <div class="changelog-patch-items-container">
          {% for changelog in pagination %}
            <a class="changelog-patch-items" href="{{ path('news.changelog.show', {slug: changelog.slug}) }}">
              MÀJ - {{ changelog.version }} : {{ changelog.date|date('d/m/Y') }}
            </a><br>
          {% endfor %}
        </div>
      </div>
    </div>

  </div>
</div>
{% endblock %}