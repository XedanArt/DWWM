{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/devblog.css') }}">
{% endblock %}

{% block title %}{{ devblog.title }}{% endblock %}

{% block body %}
<section class="devblog-article">
  {% if devblog.image %}
    <div class="devblog-banner">
      <img src="{{ asset(devblog.imagePath) }}" alt="{{ devblog.title }}" class="devblog-banner-image">
      <div class="devblog-banner-overlay">
        <h1 class="devblog-banner-title">{{ devblog.title }}</h1>
        <p class="devblog-banner-date">Publié le {{ devblog.date|date('d/m/Y') }}</p>
      </div>
    </div>
  {% endif %}

  <div class="devblog-article-wrapper">
    <div class="devblog-article-content">
      <div class="devblog-body">

        {% if devblog.image %}
          <div class="devblog-body-image">
            <img src="{{ asset(devblog.imagePath) }}" alt="{{ devblog.title }}">
          </div>
        {% endif %}

        <h2 class="devblog-body-title">{{ devblog.title }}</h2>
        <p class="devblog-body-date">Publié le {{ devblog.date|date('d/m/Y') }}</p>

        <div class="devblog-text">
          {{ devblog.content|nl2br }}
        </div>

        <div class="devblog-back">
          <a href="{{ path('news.devblog') }}" class="btn btn-return">← Retour aux devblogs</a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}