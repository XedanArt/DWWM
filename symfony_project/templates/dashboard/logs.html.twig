{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/logs.css') }}">
{% endblock %}

{% block title %}Logs{% endblock %}

{% block body %}
<div class="logs-container">
  <div class="logs-table-container">
    <h1 class="logs-title">Logs</h1>

    {% if logs is not empty %}
      <div class="logs-card">
        <div class="logs-card-header">
          Dernières actions enregistrées
        </div>
        <div class="logs-card-body">
          <div class="logs-table-wrapper">
            <table class="logs-table">
              <thead>
                <tr>
                  <th>Horodatage</th>
                  <th>Niveau</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                {% for line in logs %}
                  {% set parts = line|split('] ') %}
                  {% set timestamp = parts[0]|replace({'[': ''}) %}
                  {% set level = parts[1]|split('.')|last %}
                  {% set message = parts|slice(2)|join('] ') %}
                  {% set levelColor = {
                    'INFO': 'logs-badge-info',
                    'WARNING': 'logs-badge-warning',
                    'ERROR': 'logs-badge-error',
                    'CRITICAL': 'logs-badge-critical'
                  }[level] ?? 'logs-badge-default' %}

                  <tr class="logs-row">
                    <td class="logs-timestamp">{{ timestamp }}</td>
                    <td class="logs-level"><span class="logs-badge {{ levelColor }}">{{ level }}</span></td>
                    <td class="logs-message"><code>{{ message }}</code></td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    {% else %}
      <div class="logs-empty">Aucun log à afficher pour le moment.</div>
    {% endif %}
    <div class="logs-pagination">
      {{ knp_pagination_render(logs) }}
    </div>

    <a href="{{ path('dashboard') }}" class="logs-back-btn">← Retour au dashboard</a>
  </div>
</div>
{% endblock %}